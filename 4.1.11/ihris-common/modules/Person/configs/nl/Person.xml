<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="Person" path="/I2CE">
  <metadata>
    <version>4.1.10.0.1</version>
  </metadata>
  <configurationGroup name="Person" path="/I2CE" locale="nl">
    <version>4.1.9.0.1</version>
    <configurationGroup name="page_feedback_messages" path="/modules/forms/page_feedback_messages">
      <configuration name="person_save" locale="nl">
        <value>Dit record is opgeslagen.</value>
      </configuration>
      <configuration name="person_child_save" locale="nl">
        <value>Dit record is opgeslagen.</value>
      </configuration>
      <configuration name="person_child_delete_success" locale="nl">
        <value>Het opgevraagde formulier is verwijderd.</value>
      </configuration>
      <configuration name="person_child_delete_fail" locale="nl">
        <value>Er is een fout opgetreden bij het verwijderen van dit formulier.</value>
      </configuration>
      <configuration name="person_child_delete_not_permitted" locale="nl">
        <value>U hebt geen rechten om dit formulier te verwijderen.</value>
      </configuration>
      <configuration name="person_child_delete_not_allowed" locale="nl">
        <value>Dit formulier kan niet worden verwijderd.</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="nl">
      <configuration name="person_surname" path="person/surname/unique">
        <value>Dubbele records die overeenkomen met de naam van dit record:</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="nl">
      <configuration name="person_can_view" locale="nl">
        <value>Kan de persoonspagina bekijken</value>
      </configuration>
      <configuration name="person_can_edit" locale="nl">
        <value>Kan de persoonspagina bewerken</value>
      </configuration>
      <configuration name="person_can_view_child_forms" locale="nl">
        <value>Kan alle kindformulieren van een persoon bekijken</value>
      </configuration>
      <configuration name="person_can_edit_child_forms" locale="nl">
        <value>Kan alle kindformulieren van een persoon bewerken</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="person">
          <configuration name="display" values="single" locale="nl">
            <value>Persoon</value>
          </configuration>
          <configurationGroup name="meta">
            <configuration name="description" locale="nl">
              <value>Dit formulier bevat algemene gegevens over een persoon, zoals hun naam en verblijfplaats</value>
            </configuration>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_Person">
          <configurationGroup name="fields">
            <configurationGroup name="surname">
              <configuration name="headers" type="delimited" locale="nl">
                <value>default:Achternaam</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="firstname">
              <configuration name="headers" type="delimited" locale="nl">
                <value>default:Voornaam</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="othername">
              <configuration name="headers" type="delimited" locale="nl">
                <value>default:Andere namen</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="nationality">
              <configuration name="headers" type="delimited" locale="nl">
                <value>default:Nationaliteit</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="residence">
              <configuration name="headers" type="delimited" values="many" locale="nl">
                <value>default:Verblijfplaats</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="person">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="nl">
            <value>Persoon toevoegen of bijwerken</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="view">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="nl">
            <value>Persoon bekijken</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>