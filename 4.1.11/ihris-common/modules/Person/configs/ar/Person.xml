<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="Person" path="/I2CE">
  <metadata>
    <version>4.1.10.0.1</version>
  </metadata>
  <configurationGroup name="Person" path="/I2CE" locale="ar">
    <version>4.1.9.0.1</version>
    <configurationGroup name="page_feedback_messages" path="/modules/forms/page_feedback_messages">
      <configuration name="person_save" locale="ar"></configuration>
      <configuration name="person_child_save" locale="ar"></configuration>
      <configuration name="person_child_delete_success" locale="ar"></configuration>
      <configuration name="person_child_delete_fail" locale="ar"></configuration>
      <configuration name="person_child_delete_not_permitted" locale="ar"></configuration>
      <configuration name="person_child_delete_not_allowed" locale="ar"></configuration>
    </configurationGroup>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="ar">
      <configuration name="person_surname" path="person/surname/unique"></configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="ar">
      <configuration name="person_can_view" locale="ar">
        <value>يمكن&#160;عرض صفحة الشخص</value>
      </configuration>
      <configuration name="person_can_edit" locale="ar">
        <value>يمكن&#160;تحرير صفحة الشخص</value>
      </configuration>
      <configuration name="person_can_view_child_forms" locale="ar">
        <value>يمكن عرض&#160;كل&#160;أشكال&#160;النماذج الفرعية&#160; لشخص</value>
      </configuration>
      <configuration name="person_can_edit_child_forms" locale="ar">
        <value>يمكن&#160;تعديل&#160;جميع&#160;أشكال&#160;النموذج الفرعي &#160;لشخص</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="person">
          <configuration name="display" values="single" locale="ar">
            <value>شخص</value>
          </configuration>
          <configurationGroup name="meta">
            <configuration name="description" locale="ar">
              <value>هذا النموذج&#160;يحمل&#160;معلومات أساسية عن&#160;شخص&#160;مثل الاسم ومحل الإقامة</value>
            </configuration>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_Person">
          <configurationGroup name="fields">
            <configurationGroup name="surname">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:اللقب</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="firstname">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:الاسم الأول</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="othername">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:أسماء أخرى</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="nationality">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:جنسية</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="residence">
              <configuration name="headers" type="delimited" values="many" locale="ar">
                <value>default:سكن</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="person">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="ar">
            <value>اضافة/ تحديث &#160;شخص</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="view">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="ar">
            <value>عرض&#160;الشخص</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>