<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="Person" path="/I2CE">
  <metadata>
    <version>4.1.10.0.1</version>
  </metadata>
  <configurationGroup name="Person" path="/I2CE" locale="pt">
    <version>4.1.9.0.1</version>
    <configurationGroup name="page_feedback_messages" path="/modules/forms/page_feedback_messages">
      <configuration name="person_save" locale="pt"></configuration>
      <configuration name="person_child_save" locale="pt"></configuration>
      <configuration name="person_child_delete_success" locale="pt"></configuration>
      <configuration name="person_child_delete_fail" locale="pt"></configuration>
      <configuration name="person_child_delete_not_permitted" locale="pt"></configuration>
      <configuration name="person_child_delete_not_allowed" locale="pt"></configuration>
    </configurationGroup>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="pt">
      <configuration name="person_surname" path="person/surname/unique"></configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="pt">
      <configuration name="person_can_view" locale="pt">
        <value>Pode visualizar a página da pessoa</value>
      </configuration>
      <configuration name="person_can_edit" locale="pt">
        <value>Pode editar a página da pessoa</value>
      </configuration>
      <configuration name="person_can_view_child_forms" locale="pt">
        <value>Pode visualizar todas as child forms de uma pessoa</value>
      </configuration>
      <configuration name="person_can_edit_child_forms" locale="pt">
        <value>Pode editar todas as child forms de uma pessoa</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="person">
          <configuration name="display" values="single" locale="pt">
            <value>Pessoa</value>
          </configuration>
          <configurationGroup name="meta">
            <configuration name="description" locale="pt">
              <value>Esta ficha contém informação básica sobre uma pessoa, tal como o seu nome e residência</value>
            </configuration>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_Person">
          <configurationGroup name="fields">
            <configurationGroup name="surname">
              <configuration name="headers" type="delimited" locale="pt">
                <value>default:Apelido</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="firstname">
              <configuration name="headers" type="delimited" locale="pt">
                <value>default:Nome</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="othername">
              <configuration name="headers" type="delimited" locale="pt">
                <value>default:Outros Nomes</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="nationality">
              <configuration name="headers" type="delimited" locale="pt">
                <value>default:Nacionalidade</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="residence">
              <configuration name="headers" type="delimited" values="many" locale="pt">
                <value>default:Residência</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="person">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="pt">
            <value>Adicionar/Actualizar Pessoa</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="view">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="pt">
            <value>Visualizar Pessoa</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>