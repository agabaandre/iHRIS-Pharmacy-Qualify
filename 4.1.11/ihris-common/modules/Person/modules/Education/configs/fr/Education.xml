<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="PersonEducation" path="/I2CE">
  <metadata>
    <version>4.2.1.0.1</version>
  </metadata>
  <configurationGroup name="PersonEducation" path="/I2CE" locale="fr">
    <version>4.2.0.1</version>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="fr">
      <configuration name="person_can_view_child_form_education" locale="fr">
        <value>Peut afficher le formulaire-enfant d’éducation d’une personne</value>
      </configuration>
      <configuration name="person_can_edit_child_form_education" locale="fr">
        <value>Peut éditer les formulaires-enfant d’éducation d’une personne</value>
      </configuration>
      <configuration name="can_edit_database_list_edu_type" locale="fr">
        <value>Peut éditer les listes des bases de données sur le type d’éducation</value>
      </configuration>
      <configuration name="can_view_database_list_edu_type" locale="fr">
        <value>Peut afficher les listes des bases de données sur le type d’éducation</value>
      </configuration>
      <configuration name="can_edit_database_list_degree" locale="fr">
        <value>Peut éditer les listes des bases de données sur les types de diplômes</value>
      </configuration>
      <configuration name="can_view_database_list_degree" locale="fr">
        <value>Peut afficher les listes des bases de données sur les types de diplômes</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="education">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="fr">
            <value>Ajouter/Actualiser les antécédents éducatifs</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="degree">
          <configuration name="display" values="single" locale="fr">
            <value>Diplôme ou certificat</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="edu_type">
          <configuration name="display" values="single" locale="fr">
            <value>Type d'éducation</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="education">
          <configuration name="display" values="single" locale="fr">
            <value>Antécédents éducatifs</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_Degree">
          <configurationGroup name="fields">
            <configurationGroup name="name">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Nom</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="edu_type">
              <configuration name="headers" type="delimited" values="many" locale="fr">
                <value>default:Type d'éducation</value>
                <value>select_degree:Sélectionner le type d’éducation puis le diplôme</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
        <configurationGroup name="iHRIS_Education">
          <configurationGroup name="fields">
            <configurationGroup name="degree">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Diplôme ou certificat</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="institution">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Nom de l’institution</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="location">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Site de l’institution</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="year">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Année d’obtention du diplôme (Laisser un vide si en cours)</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="major">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Matière principale</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>