<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="PersonEducation" path="/I2CE">
  <metadata>
    <version>4.2.1.0.1</version>
  </metadata>
  <configurationGroup name="PersonEducation" path="/I2CE" locale="ja">
    <version>4.2.0.1</version>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="ja">
      <configuration name="person_can_view_child_form_education" locale="ja">
        <value>教育の子フォームを閲覧できる</value>
      </configuration>
      <configuration name="person_can_edit_child_form_education" locale="ja">
        <value>教育の子フォームを編集できる</value>
      </configuration>
      <configuration name="can_edit_database_list_edu_type" locale="ja">
        <value>教育タイプのデータベースリストを編集できる</value>
      </configuration>
      <configuration name="can_view_database_list_edu_type" locale="ja">
        <value>教育タイプのデータベースリストを閲覧できる</value>
      </configuration>
      <configuration name="can_edit_database_list_degree" locale="ja">
        <value>学位タイプのデータベースリストを編集できる</value>
      </configuration>
      <configuration name="can_view_database_list_degree" locale="ja">
        <value>学位タイプのデータベースリストを閲覧できる</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="education">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="ja">
            <value>学業履歴の追加/更新</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="degree">
          <configuration name="display" values="single" locale="ja">
            <value>学位</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="edu_type">
          <configuration name="display" values="single" locale="ja">
            <value>教育の種類</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="education">
          <configuration name="display" values="single" locale="ja">
            <value>学業履歴</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_Degree">
          <configurationGroup name="fields">
            <configurationGroup name="name">
              <configuration name="headers" type="delimited" locale="ja">
                <value>default:名前</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="edu_type">
              <configuration name="headers" type="delimited" values="many" locale="ja">
                <value>default:教育の種類</value>
                <value>select_degree:教育タイプ・学位の選択</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
        <configurationGroup name="iHRIS_Education">
          <configurationGroup name="fields">
            <configurationGroup name="degree">
              <configuration name="headers" type="delimited" locale="ja">
                <value>default:学位</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="institution">
              <configuration name="headers" type="delimited" locale="ja">
                <value>default:機関名</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="location">
              <configuration name="headers" type="delimited" locale="ja">
                <value>default:機関所在地</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="year">
              <configuration name="headers" type="delimited" locale="ja">
                <value>default:卒業年 (在学中の場合は空欄)</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="major">
              <configuration name="headers" type="delimited" locale="ja">
                <value>default:専攻</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>