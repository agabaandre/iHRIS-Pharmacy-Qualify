<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="PersonEducation" path="/I2CE">
  <metadata>
    <version>4.2.1.0.1</version>
  </metadata>
  <configurationGroup name="PersonEducation" path="/I2CE" locale="ar">
    <version>4.2.0.1</version>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="ar">
      <configuration name="person_can_view_child_form_education" locale="ar">
        <value>يمكن&#160;عرض نموذج التعليم الفرعي لشخص</value>
      </configuration>
      <configuration name="person_can_edit_child_form_education" locale="ar">
        <value>يمكن تعديل&#160;نموذج التعليم الفرعي لشخص</value>
      </configuration>
      <configuration name="can_edit_database_list_edu_type" locale="ar">
        <value>يمكن تعديل&#160;قوائم&#160;قاعدة بيانات نوع التعليم</value>
      </configuration>
      <configuration name="can_view_database_list_edu_type" locale="ar">
        <value>يمكن&#160;عرض قوائم&#160;قاعدة بيانات نوع التعليم</value>
      </configuration>
      <configuration name="can_edit_database_list_degree" locale="ar">
        <value>يمكن&#160;تعديل&#160;قوائم&#160;قاعدة بيانات نوع الدرجة</value>
      </configuration>
      <configuration name="can_view_database_list_degree" locale="ar">
        <value>يمكن&#160;عرض قوائم&#160;قاعدة البيانات نوع الدرجة</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="education">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="ar">
            <value>إضافة / تحديث&#160;تاريخ التعليم</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="degree">
          <configuration name="display" values="single" locale="ar">
            <value>الدرجة</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="edu_type">
          <configuration name="display" values="single" locale="ar">
            <value>نوع التعليم</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="education">
          <configuration name="display" values="single" locale="ar">
            <value>تاريخ التعليم</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_Degree">
          <configurationGroup name="fields">
            <configurationGroup name="name">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:الاسم</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="edu_type">
              <configuration name="headers" type="delimited" values="many" locale="ar">
                <value>default:نوع التعليم</value>
                <value>select_degree:إختر&#160;نوع&#160;االتعليم&#160; ثم الدرجة</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
        <configurationGroup name="iHRIS_Education">
          <configurationGroup name="fields">
            <configurationGroup name="degree">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:الدرجة</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="institution">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:اسم&#160;المؤسسة</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="location">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:موقع المؤسسة</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="year">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:سنة التخرج&#160;(اتركه فارغا&#160;إذا&#160;كان في طور الإنجاز)</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="major">
              <configuration name="headers" type="delimited" locale="ar">
                <value>default:رائد</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>