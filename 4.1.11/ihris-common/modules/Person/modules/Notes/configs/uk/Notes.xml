<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="PersonNotes" path="/I2CE">
  <metadata>
    <version>4.2.1.0.1</version>
  </metadata>
  <configurationGroup name="PersonNotes" path="/I2CE" locale="uk">
    <version>4.2.0.1</version>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="uk">
      <configuration name="person_can_view_child_form_notes" locale="uk">
        <value>Можна переглядати нотатки дочірньої форми особи</value>
      </configuration>
      <configuration name="person_can_edit_child_form_notes" locale="uk">
        <value>Можна редагувати нотатки дочірньої форми особи</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="notes">
          <configuration name="display" values="single" locale="uk">
            <value>Примітки</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_Notes">
          <configurationGroup name="fields">
            <configurationGroup name="note">
              <configuration name="headers" type="delimited" locale="uk">
                <value>default:Примітка</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="date_added">
              <configuration name="headers" type="delimited" locale="uk">
                <value>default:Дату додано</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="notes">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="uk">
            <value>Додати/оновити нотатки</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>