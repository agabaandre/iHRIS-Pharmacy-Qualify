<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="Lists-LinkTo-String">
  <metadata>
    <displayName>List Link to String</displayName>
    <version>4.3.0</version>
    <path name="configs">
      <value>./configs</value>
    </path>
    <description>Lists that are linked to a string (id). Multiple forms are defined here that can be used to link lists to strings for different storage mechanisms. You must enable the required form storage module yourself to avoid extra modules being loaded. You should use the same form storage that is used for the List form you're linking. Certain storage mechanisms may need extra storage options defined.</description>
    <link>https://launchpad.net/i2ce</link>
    <requirement name="Lists-LinkTo">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <requirement name="forms-storage-CSV">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <requirement name="forms-storage-flat">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <requirement name="forms-storage-multiflat">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <requirement name="forms-storage-magicdata">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <requirement name="Lists-LinkTo">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
  </metadata>
  <configurationGroup name="Lists-LinkTo-String" path="/modules/forms/">
    <displayName>List Link to String</displayName>
    <configurationGroup name="forms">
      <configurationGroup name="list_linkto_string_magicdata">
        <displayName>Lists Linked to String - MagicData Storage</displayName>
        <configuration name="class" values="single" type="string">
          <value>I2CE_ListLink_String</value>
        </configuration>
        <configuration name="display" values="single" locale="en_US" type="string">
          <value>Lists Linked to String</value>
        </configuration>
        <configuration name="storage" values="single" type="string">
          <value>magicdata</value>
        </configuration>
      </configurationGroup>
      <configurationGroup name="list_linkto_string_entry">
        <displayName>Lists Linked to String - Entry Storage</displayName>
        <configuration name="class" values="single" type="string">
          <value>I2CE_ListLink_String</value>
        </configuration>
        <configuration name="display" values="single" locale="en_US" type="string">
          <value>Lists Linked to String</value>
        </configuration>
        <configuration name="storage" values="single" type="string">
          <value>entry</value>
        </configuration>
      </configurationGroup>
      <configurationGroup name="list_linkto_string_flat">
        <displayName>Lists Linked to String - Flat Storage</displayName>
        <configuration name="class" values="single" type="string">
          <value>I2CE_ListLink_String</value>
        </configuration>
        <configuration name="display" values="single" locale="en_US" type="string">
          <value>Lists Linked to String</value>
        </configuration>
        <configuration name="storage" values="single" type="string">
          <value>flat</value>
        </configuration>
      </configurationGroup>
      <configurationGroup name="list_linkto_string_CSV">
        <displayName>Lists Linked to String - CSV Storage</displayName>
        <configuration name="class" values="single" type="string">
          <value>I2CE_ListLink_String</value>
        </configuration>
        <configuration name="display" values="single" locale="en_US" type="string">
          <value>Lists Linked to String</value>
        </configuration>
        <configuration name="storage" values="single" type="string">
          <value>CSV</value>
        </configuration>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="formClasses">
      <displayName>Form Class Configuration</displayName>
      <configurationGroup name="I2CE_ListLink_String">
        <displayName>Configuration for I2CE_ListLink_String</displayName>
        <configuration name="extends" values="single" type="string">
          <displayName>The class this form extends</displayName>
          <value>I2CE_ListLink</value>
        </configuration>
        <configurationGroup name="fields">
          <displayName>Fields for I2CE_ListLink_String</displayName>
          <configurationGroup name="links_to">
            <displayName>The field 'links_to'</displayName>
            <configuration name="formfield" values="single" type="string">
              <displayName>Form Field</displayName>
              <value>STRING_LINE</value>
            </configuration>
            <configuration name="headers" type="delimited" locale="en_US" values="single">
              <displayName>The headers for this field.</displayName>
              <value>default:Links To</value>
            </configuration>
            <configuration name="required" type="boolean" values="single">
              <displayName>Required</displayName>
              <value>true</value>
            </configuration>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>