<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="page-formautoview-builder">
  <metadata>
    <displayName>Page Form Auto View Builder</displayName>
    <category>Administration</category>
    <description>Page Builder</description>
    <creator>Carl Leitner</creator>
    <email>litlfred@gmail.com</email>
    <link>https://launchpad.net/i2ce</link>
    <version>4.3.0</version>
    <requirement name="page-builder">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <requirement name="forms">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <path name="classes">
      <value>./lib</value>
    </path>
    <path name="templates">
      <value>./templates</value>
    </path>
    <path name="scripts">
      <value>./scripts</value>
    </path>
    <priority>100</priority>
  </metadata>
  <configurationGroup name="page-formautoview-builder" path="/">
    <configurationGroup name="page_builder_handler" path="/modules/page-builder/handlers">
      <configurationGroup name="I2CE_PageFormAutoView">
        <configuration name="swiss" values="single" type="string">
          <value>PageFormAutoView</value>
        </configuration>
        <configuration name="description" local="en_US" values="single" type="string">
          <value>AJAX aware page to view a form and optionally linked to child forms</value>
        </configuration>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>
<!--End of /I2CE/forms/formClasses -->