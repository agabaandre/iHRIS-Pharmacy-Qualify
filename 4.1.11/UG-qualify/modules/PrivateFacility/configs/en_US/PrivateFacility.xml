<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="PrivateFacility" path="/I2CE">
  <metadata>
    <version>4.0.9.0</version>
  </metadata>
  <configurationGroup name="PrivateFacility" path="/I2CE" locale="en_US">
    <version>4.0.9.0</version>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="en_US">
      <configuration name="person_can_view" locale="en_US">
        <value>Can view the person page</value>
      </configuration>
      <configuration name="person_can_edit" locale="en_US">
        <value>Can edit the person page</value>
      </configuration>
      <configuration name="person_can_view_child_forms" locale="en_US">
        <value>Can view all of the child forms of a person</value>
      </configuration>
      <configuration name="person_can_edit_child_forms" locale="en_US">
        <value>Can edit all of the child forms of a person</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="privatefacility">
          <configuration name="display" values="single" locale="en_US">
            <value>PrivateFacility</value>
          </configuration>
          <configurationGroup name="meta">
            <configuration name="description" locale="en_US">
              <value>This form holds basic information about a person such as their names and residence</value>
            </configuration>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_PrivateFacility">
          <configurationGroup name="fields">
            <configurationGroup name="name">
              <configuration name="headers" type="delimited" locale="en_US">
                <value>default:Name</value>
              </configuration>
            </configurationGroup>
            
            <configurationGroup name="privatefacility_type">
              <configuration name="headers" type="delimited" locale="en_US">
                <value>default:Health Unit Type</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="residence">
              <configuration name="headers" type="delimited" values="many" locale="en_US">
                <value>default:Location</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="person">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="en_US">
            <value>Add/Update PrivateFacility</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="view">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="en_US">
            <value>View PrivateFacility</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>
